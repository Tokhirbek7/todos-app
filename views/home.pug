extends layout.pug


block content
   if error
     p.error Please fill the input

   if error
     p.success Good job

   if deleted
     p.success Deleted

   form.form(action ='/add' method ='POST')
   input.input(type='text' placeholder ='add your first project description...' name='todo')
   button.btn Add


      div.todos
        if todos.length
          each todo in todos
            p.todo
              if todo.done
                a.done(href=`/${todo.id}/update`) #{ todo.description }
              else
                a.undone(href=`/${todo.id}/update`) #{ todo.description }  
              a.delete(href=`/${todo.id}/delete`) Delete
        else 
          p.todo No available todo